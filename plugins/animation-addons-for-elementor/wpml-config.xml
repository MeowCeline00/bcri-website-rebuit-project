<wpml-config>
    <elementor-widgets>
        <!-- Animated Title Widget -->
        <widget name="wcf--title">
            <conditions>
                <condition key="widgetType">wcf--title</condition>
            </conditions>
            <fields>
                <field type="Content: Title" editor_type="LINE">title</field>
            </fields>
            <fields-in-item items_of="title_prefix_list">
                <field type="Animated Title: Label" editor_type="LINE">label</field>
                <field type="Animated Title: Label On" editor_type="LINE">label_on</field>
                <field type="Animated Title: Label Off" editor_type="LINE">label_off</field>
            </fields-in-item>
        </widget>

        <!-- Button Widget -->
        <widget name="wcf--button">
            <conditions>
